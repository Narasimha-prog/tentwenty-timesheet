{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "../../dist/libs/shared/models",
    "tsBuildInfoFile": "../../dist/libs/shared/models/tsconfig.lib.tsbuildinfo",
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vite/client"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "emitDeclarationOnly": false      // <- important
  },
  "include": ["src/**/*.ts"]
}
