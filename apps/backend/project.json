{
  "name": "backend",
  "root": "apps/backend",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
       "tsc -p apps/backend/tsconfig.app.json",
       "node apps/backend/scripts/flatten.js",
        "echo '{ \"type\": \"module\" }' > dist/apps/backend/package.json"
  ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": " node dist/apps/backend/main.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:eslint",
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    }
  }
}
